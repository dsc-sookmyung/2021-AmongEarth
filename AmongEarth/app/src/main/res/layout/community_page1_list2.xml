<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/Page1_List2"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#f8fbeb"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="14dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:paddingRight="14dp"
        android:background="@drawable/community_page1_list1_menu1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/page1_list2_icon"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/person1"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <TextView
                android:id="@+id/page1_list2_id"
                android:layout_toRightOf="@id/page1_list2_icon"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="7.2pt"
                android:textStyle="bold"
                android:textColor="@color/mediumGray"
                android:text="Sandra"/>
            <TextView
                android:id="@+id/page1_list2_date"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wed"
                android:textColor="@color/lightWriteGray"
                android:textSize="6pt"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:gravity="center"/>
        </RelativeLayout>
        <com.example.amongearth.community.RoundImageView
            android:id="@+id/page1_list2_photo"
            android:layout_width="match_parent"
            android:src="@drawable/trashphoto1"
            android:scaleType="centerCrop"
            android:layout_height="90dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/page1_list2_content"
                android:paddingLeft="17dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:lineSpacingExtra="1dp"
                android:textColor="@android:color/black"
                android:textSize="6pt"
                android:text="@string/community_page2_note1"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/love_button"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/page1_list2_heart"
                    android:paddingBottom="5dp"
                    android:paddingLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textColor="@android:color/black"
                    android:textSize="7pt"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>
</RelativeLayout>