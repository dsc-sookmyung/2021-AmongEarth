<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/verylightGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/commnunity_page4_write"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="New Post"
            android:textColor="@android:color/black"
            android:textSize="9pt" />

        <Button
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/community_page4_button1"
            android:text="DONE"
            android:textSize="6pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page4_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Category"
            android:textColor="@color/lightWriteGray"
            android:textSize="8pt" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/downbutton1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/page4_line1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="1.5dp"
        android:background="@color/verylightGreen"
        app:layout_constraintBottom_toBottomOf="@id/page4_category"/>

    <RelativeLayout
        android:id="@+id/page4_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/page4_line1"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/lightWriteGray"
            android:textSize="8pt" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/page4_line2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="1.5dp"
        android:background="@color/verylightGreen"
        app:layout_constraintBottom_toBottomOf="@id/page4_title"/>

    <LinearLayout
        android:id="@+id/page4_postwrite"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/page4_line2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Start writing..."
            android:textColor="@color/lightWriteGray"
            android:textSize="8pt" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/page4_line3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="1.5dp"
        android:background="@color/verylightGreen"
        app:layout_constraintBottom_toBottomOf="@id/page4_postwrite"/>
    <RelativeLayout
        android:id="@+id/page4_fileUpload"
        app:layout_constraintTop_toTopOf="@id/page4_line3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="Upload Files"
            android:textColor="@color/lightWriteGray"
            android:textSize="8pt"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_centerVertical="true"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/photofile_upload"
            android:scaleType="centerInside"
            android:layout_marginRight="9dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/page4_line4"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="1.5dp"
        android:background="@color/verylightGreen"
        app:layout_constraintBottom_toBottomOf="@id/page4_fileUpload"/>
    <LinearLayout
        android:id="@+id/page4_photo_upload"
        app:layout_constraintTop_toTopOf="@id/page4_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="130dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/photofile_upload_button"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/photofile_upload_button"
            android:layout_margin="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/page4_line5"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="1.5dp"
        android:background="@color/verylightGreen"
        app:layout_constraintBottom_toBottomOf="@id/page4_photo_upload"/>

</androidx.constraintlayout.widget.ConstraintLayout>